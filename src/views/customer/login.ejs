<!DOCTYPE html>
<html lang="en" data-bs-theme="<%= darkMode ? 'dark' : 'light' %>">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%- include('../partials/cdn') %>
        <title>Login</title>
    </head>
    <body>
        <%- include('../partials/header') %>

        <main class="bg-body-secondary">
            <div class="container py-2">
                <div class="row justify-content-center align-items-center my-3">
                    <div class="col-12 col-md-9 col-lg-6 col-xl-5">
                        <form
                            action=""
                            method="post"
                            class="text-body-emphasis p-4 rounded-4 shadow card"
                        >
                            <h1 class="text-center text-primary mb-2 text-uppercase">Login</h1>
                            <% if(typeof status !== 'undefined' && status === 'fail') {%>
                            <p id="notification" class="text-danger text-center mb-1">
                                <i>Incorrect username or password</i>
                            </p>
                            <% } %> <% if(typeof status !== 'undefined' && status === 'block') {%>
                            <p id="notification" class="text-danger text-center mb-1">
                                <i>This account was blocked</i>
                            </p>
                            <% } %>
                            <div class="form-group">
                                <label class="form-label" for="input-username">Username</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="input-username"
                                    name="username"
                                    placeholder="Enter username"
                                    required
                                />
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-label" for="input-password">Password</label>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="input-password"
                                    name="password"
                                    placeholder="Enter password"
                                    required
                                />
                            </div>

                            <button
                                type="submit"
                                class="d-block mx-auto btn btn-primary col-12 mt-3 mb-2 px-4 py-2"
                            >
                                Login
                            </button>
                            <p class="text-center mb-0">
                                You don't have an account?
                                <a href="/auth/signup" class="text-primary">Sign-up</a> now.
                            </p>

                            <div class="divider d-flex align-items-center my-3">
                                <p
                                    class="mb-0 flex-grow-1 ms-2"
                                    style="height: 1px; background-color: #eee"
                                ></p>
                                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                                <p
                                    class="mb-0 flex-grow-1 me-2"
                                    style="height: 1px; background-color: #eee"
                                ></p>
                            </div>

                            <div class="d-flex justify-content-center mb-2">
                                <a
                                    class="btn btn-danger px-4 py-2 col-12"
                                    href="/auth/google"
                                    role="button"
                                >
                                    <i class="fab fa-google me-2"></i>Continue with Google
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %> <% if(typeof status !== 'undefined') {%>
        <script>
            $('#input-username').on('input', (e) => {
                $('#notification').css('visibility', 'hidden');
            });
            $('#input-password').on('input', (e) => {
                $('#notification').css('visibility', 'hidden');
            });
        </script>
        <% } %> <% if(typeof signupSuccess !== 'undefined') { %>
        <script>
            toastr.options.timeOut = 3000;
            toastr.success('Sign up successfully.');
        </script>
        <% } %>
    </body>
</html>
